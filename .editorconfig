# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.cfg]
indent_size = 4

[Makefile]
indent_style = tab

[*.{py,tac}]
indent_size = 4
max_line_length = 88

[*.rst]
indent_size = 3
